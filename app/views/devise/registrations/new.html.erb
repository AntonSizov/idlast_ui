<div class="row" style="margin-top:30px;">
  <div class="span12">
	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
	:html => { :class => "form-signin"}) do |f| %>
	<%= devise_error_messages! %>
	<h2 class="form-signin-heading">Sign up</h2>

	<%= f.text_field :name, :autofocus => true, :placeholder => "Pick a username",
	:class => "input-block-level" %>

	<%= f.email_field :email, :placeholder => "Your e-mail",
	:class => "input-block-level" %>

	<%= f.password_field :password, :placeholder => "Create password",
	:class => "input-block-level"  %>

	<%= f.submit "Sign up", :class => "btn btn-large btn-success" %>
	<p></p>
	<div><%= render "devise/shared/links" %></div>
	<% end %>
  </div>
</div>
