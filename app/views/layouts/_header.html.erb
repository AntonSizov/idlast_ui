<div class="navbar navbar-static-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to root_path, :class => "brand" do %>
	  <span>IDLast
		<sup> <i>microstock.ru</i></sup>
	  </span>
	  <% end %>
      <div class="container nav-collapse">
		<ul class="nav">
		  <%= li_link_to t(:blog_h), articles_path %>
		  <%= li_link_to t(:about_us_h), about_us_path %>
		</ul> <!-- ul class nav -->
		<% if user_signed_in? %>
		<ul class="nav pull-right">
		  <% if current_user.timezone_presented? %>
		    <li><%= link_to Time.zone.to_s, '#' %></li>
		  <% end %>
		  <li><%= link_to t(:my_profile_h), user_path(current_user) %></li>
		  <li><%= link_to t(:sign_out), destroy_user_session_path, :method => :delete %></li>
		<% else %>

        <ul class="nav pull-right">

		  <!--doesn't show signup btn at home page and at signup page -->
		  <% if (controller_name != 'pages' && action_name != 'home') && controller_name != 'registrations' %>
		  <li><div><%= link_to t(:sign_up), new_user_registration_path, :class => "btn btn-success" %></div></li>
		  <% end %>

		  <!-- doesn't show divider at sigin/sigup/home pages -->
		  <% if controller_name != 'sessions' &&
			 controller_name != 'registrations' &&
			 (controller_name != 'pages' && action_name != 'home') %>
		  <li class="divider-vertical"></li>
		  <% end %>


		  <!-- doesn't show sigin btn at sigin page -->
		  <% if controller_name != 'sessions' %>
		  <li><div><%= link_to t(:sign_in), new_user_session_path, :class => "btn" %></div></li>
		  <% end %>
        </ul>
		<% end %>
      </div><!--/.nav-collapse -->

    </div>
  </div>
</div>
