<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <li><%= link_to "Home", root_path %></li>
		<% if user_signed_in? %>
		  <li><%= link_to "My settings", edit_user_path(current_user) %>
          <li><%= link_to "Sign out #{current_user.name}",
		    destroy_user_session_path, :method => :delete %></li>
		<% else %>
	      <li><%= link_to "Sign in", new_user_session_path %></li>
		<% end %>
    </ul>
  </nav>
</header>
