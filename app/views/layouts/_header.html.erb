<header>
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
		<% if user_signed_in? %>
		  <li><%= link_to "My page", user_path(current_user) %></li>
		  <% if current_user.admin? %>
	        <li><%= link_to "Users", users_path %></li>
			<li><%= link_to "Subscriptions", subscriptions_path %></li>
	      <% end %>
          <li><%= link_to "Sign out #{current_user.name}",
		    destroy_user_session_path, :method => :delete %></li>
		<% else %>
	      <li><%= link_to "Sign in", new_user_session_path %></li>
		<% end %>
    </ul>
  </nav>
</header>
