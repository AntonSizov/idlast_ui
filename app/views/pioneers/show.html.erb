<div>
  <h3><%= @article.title %></h3>
  <p class="muted">
	<%= @article.created_at.to_s(:user_datetime) %> |
	<%= link_to "Comments: #{@article.comments.count}", article_path(@article) %> |
	<% if @article.published? %>
	Published
	<% else %>
	Unpublished
	<% end %> |
	<%= link_to 'Edit', edit_article_path(@article) %> |
    <%= link_to 'Delete', @article, :confirm => 'Are you sure?', :method => :delete %>
  </p>
    <div><%= raw(@article.text) %></div>
</div>

<% if @article.comments.size > 0 %>
  <h4>Comments</h4>
  <table class="table table-striped">
  <% for comment in @article.comments %>
    <tr>
	  <td>
		<p class="muted">by <%= comment.user_name %> | <%= comment.created_at.to_s(:user_datetime) %> | <%= link_to 'Delete', article_comment_path(@article, comment), :confirm => 'Are you sure?', :method => :delete %></p>
		<p><%= comment.content %></p>
	  </td>
	</tr>
  <% end %>
  </table>
<% end %>

<h4>New Comment</h4>
<%= form_for [@article, Comment.new] do |f| %>
  <fieldset>
  <p><%= f.text_area :content, :rows => 4, :style => 'width: 600px' %></p>
  <%= f.submit 'Create comment', :class => 'btn' %>
  </fieldset>
<% end %>
