<h3>
  Users (<%= User.count %>)
</h3>

<table class="table table-hover table-condensed">
  <tr>
    <th>Email</th>
    <th>Username</th>
	<th>Updated At</th>
	<th>Created At</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.email, admin_user_path(user) %></td>
      <td><%= link_to user.name, admin_user_path(user) %></td>
	  <td><% if user.updated_at %>
		<%= user.updated_at.to_s(:short_datetime) %>
	  <% end %>
	  </td>
	  <td>
		<% if user.created_at %>
		<%= user.created_at.to_s(:short_datetime) %>
		<% end %>
	  </td>
    </tr>
  <% end %>

</table>

<%= will_paginate %>
